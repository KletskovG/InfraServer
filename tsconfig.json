{
    "compilerOptions": {
      "alwaysStrict": true,
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "*",
          "src/*"
        ],
        "utils/*": ["./src/utils/*"],
        "types/*": ["./src/types/*"],
        "telegram/*": ["./src/telegram/*"],
        "academy/*": ["./src/academy/*"],
        "api/": ["./src/api/*"],
        "const/": ["./src/const/*"],
        "scrapper/": ["./src/scrapper/*"],
      },
      "typeRoots": ["node_modules/@types", "./src/typings"],
      "types": [
        "node",
        "express",
      ]
    },
    "include": [
      "src/*"
    ]
}
